/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  /*Configure GPIO pins : PB12 PB13 PB14 PB15 */
  GPIO_InitStruct.Pin = GPIO_PIN_12|GPIO_PIN_13|GPIO_PIN_14|GPIO_PIN_15;
  GPIO_InitStruct.Mode = GPIO_MODE_INPUT;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(GPIOB, &GPIO_InitStruct);

}

/* USER CODE BEGIN 4 */

void PwmESCMotorSetConfiguration(TIM_HandleTypeDef *timer)
{
	//start PWM 1 --Timer 3
	HAL_Delay(4000);//wait for one second
	__HAL_TIM_SET_COMPARE(&timer,TIM_CHANNEL_1,6554);//set the maximum value to 2ms
	HAL_Delay(3000);//wait for for around 5 seconds
	__HAL_TIM_SET_COMPARE(&timer,TIM_CHANNEL_1,3277);//set the minimum value to 1ms
	HAL_Delay(5000);//wait for 2  second
}

void GenerateCompareValueForPWMMotorControl()
{
	unsigned char inputFromDipSwitch=0;
	inputFromDipSwitch |= (!HAL_GPIO_ReadPin(GPIOB, GPIO_PIN_12) << 0);
	inputFromDipSwitch |= (!HAL_GPIO_ReadPin(GPIOB, GPIO_PIN_13) << 1);
	inputFromDipSwitch |= (!HAL_GPIO_ReadPin(GPIOB, GPIO_PIN_14) << 2);
	inputFromDipSwitch |= (!HAL_GPIO_ReadPin(GPIOB, GPIO_PIN_15) << 3);

	int pwmCounterCompareResult=219*inputFromDipSwitch+3277;

	__HAL_TIM_SET_COMPARE(&htim3,TIM_CHANNEL_1,pwmCounterCompareResult);
}


